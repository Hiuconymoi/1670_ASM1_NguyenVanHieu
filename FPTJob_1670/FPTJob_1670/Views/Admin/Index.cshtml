@{
    ViewData["Title"] = "Admin ";
    Layout = "_AdminLayout";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

<div class="row mb-3">
    <div class="col-md-6">
        <form asp-action="ShowAcceptedJobs" method="post">
            <button type="submit" class="btn btn-success"><i class="fas fa-eye"></i> Show Accepted Jobs</button>
        </form>
        <br />
        <form asp-action="ShowRejectedJobs" method="post">
            <button type="submit" class="btn btn-danger"><i class="fas fa-ban"></i> Show Rejected Jobs</button>
        </form>
       
    </div>
</div>

@if (Model != null)
{
            <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var job in Model)
            {
                        <tr>
                            <td>@job.Name</td>
                            <td>@job.Description</td>
                            <td>@job.statusJobs</td>
                            <td>
                                <a asp-controller="Jobs" asp-action="Details" asp-route-id="@job.Id" class="btn btn-info">Detail</a>
                        @if (job.statusJobs == "Not Confirmed")
                        {
                                        <form asp-action="AcceptJob" method="post" style="display: inline;">
                                            <input type="hidden" name="id" value="@job.Id" />
                                            <button type="submit" class="btn btn-success"><i class="fas fa-check"></i> Accept</button>
                                        </form>
                                        <form asp-action="RejectJob" method="post" style="display: inline;">
                                            <input type="hidden" name="id" value="@job.Id" />
                                            <button type="submit" class="btn btn-danger"><i class="fas fa-times"></i> Reject</button>
                                        </form>
                        }
                            </td>
                        </tr>
            }
            </tbody>
        </table>
}
else
{
        <p>Không có công việc chưa được xác nhận.</p>
}

<style>
    /* Định dạng các nút */
    .btn {
        font-size: 0.875rem;
        padding: 0.375rem 0.75rem;
        border-radius: 0.25rem;
        display: inline-block;
        transition: all 0.3s ease;
    }

    /* Định dạng nút màu xanh (.btn-success) */
    .btn-success {
        color: #fff;
        background-color: #28a745;
        border-color: #28a745;
    }

    /* Định dạng nút màu đỏ (.btn-danger) */
    .btn-danger {
        color: #fff;
        background-color: #dc3545;
        border-color: #dc3545;
    }

    /* Định dạng icon trong nút */
    .btn i {
        margin-right: 5px;
    }

    /* Định dạng nút khi rê chuột qua */
    .btn:hover {
        opacity: 0.8;
    }

    /* Định dạng bảng */
    .table {
        width: 100%;
        margin-bottom: 1rem;
        color: #212529;
        border-collapse: collapse;
    }

        /* Định dạng tiêu đề cột */
        .table th, .table td {
            padding: 0.75rem;
            vertical-align: top;
            border-top: 1px solid #dee2e6;
        }

        /* Định dạng tiêu đề cột */
        .table th {
            vertical-align: bottom;
            border-bottom: 2px solid #dee2e6;
        }

        /* Định dạng màu nền của hàng chẵn */
        .table tbody tr:nth-of-type(even) {
            background-color: #f9f9f9;
        }

        /* Định dạng màu nền khi rê chuột vào hàng */
        .table tbody tr:hover {
            background-color: #f5f5f5;
        }

</style>