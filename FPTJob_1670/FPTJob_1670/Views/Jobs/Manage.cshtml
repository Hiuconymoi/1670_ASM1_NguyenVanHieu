@model List<FPTJob_1670.Models.Job>
@{
    ViewData["Title"] = "Manage Jobs";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Job List</title>
    <style>
        /* CSS cơ bản để thiết kế danh sách công việc */
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
        }

        .container {
            width: 80%;
            margin: 20px auto;
        }

        .job-card {
            background-color: #fff;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
            padding: 20px;
        }

            .job-card h2 {
                margin-top: 0;
                color: #333;
            }

            .job-card p {
                color: #666;
            }

            .job-card a {
                color: #007bff;
                text-decoration: none;
                font-weight: bold;
            }

                .job-card a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <div class="container">
        <h1>Job List</h1>
        @if (Model.Count == 0)
        {
            <p>No jobs found.</p>
        }
        else
        {
            @foreach (var job in Model)
            {
                <div class="job-card">
                    <h2>@job.Title</h2>
                    <p>@job.Description</p>
                    <p><strong>Application Deadline:</strong> @job.Application_Deadline.ToShortDateString()</p>
                    <p><strong>Salary:</strong> $@job.Salary</p>
                    <p><a href="@Url.Action("Details", "Jobs", new { id = job.Id })">Details</a></p>
                </div>
            }
        }
    </div>
</body>
</html>